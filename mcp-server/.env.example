# ===========================================
# Legal Intelligence MCP Hub - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# -----------------
# Server Configuration
# -----------------
MCP_HOST=0.0.0.0
MCP_PORT=8000
LOG_LEVEL=INFO

# -----------------
# AWS S3 Configuration (for report uploads)
# -----------------
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_DEFAULT_REGION=us-east-1
S3_DEFAULT_BUCKET=legal-research-reports

# -----------------
# Court Listener API
# -----------------
# Get your API key at: https://www.courtlistener.com/help/api/rest/
COURTLISTENER_API_KEY=your_api_key_here
COURTLISTENER_BASE_URL=https://www.courtlistener.com/api/rest/v4

# -----------------
# Google/Gemini Configuration
# -----------------
# For Gemini File Search API (RAG)
# Get your key at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# Gemini CLI path (if not in PATH)
# GEMINI_CLI_PATH=/usr/local/bin/gemini

# -----------------
# Tavily API (for web search retrieval)
# -----------------
# Get your key at: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# -----------------
# GPT Researcher Configuration
# -----------------
# NOTE: Do NOT set OPENAI_API_KEY - this project uses Gemini
# These are inherited from the parent gpt-researcher config
FAST_LLM=google_genai:gemini-2.5-pro
SMART_LLM=google_genai:gemini-2.5-pro
STRATEGIC_LLM=google_genai:gemini-2.5-pro
RETRIEVER=tavily

